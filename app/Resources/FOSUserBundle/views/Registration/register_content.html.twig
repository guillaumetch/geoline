<div class="col-lg-offset-4 col-lg-4 transparent text-center">
    <h3>Inscription</h3>
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register col-lg-12'}}) }}

    <div class="col-lg-offset-3 col-lg-6">
        {{ form_label(form.email,"Email :") }}
        {{ form_widget(form.email, {'attr':{'class':'form-control'}})}}
        <br>
        {{ form_label(form.plainPassword.first,"Mot de passe :") }}
        {{ form_widget(form.plainPassword.first, {'attr':{'class':'form-control'}})}}
        <br>
        {{ form_label(form.plainPassword.second,"Retaper votre mot de passe") }}
        {{ form_widget(form.plainPassword.second, {'attr':{'class':'form-control'}})}}

        <br>
        <input  class="btn btn-default" type="submit" value="S'inscrire" />
        {% if error is defined %}
            <p id="error">
                {{ error }}
            </p>
        {% endif %}
        <br>
        <br>
    </div>

    {{ form_end(form) }}
</div>

